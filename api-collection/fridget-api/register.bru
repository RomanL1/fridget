meta {
  name: register
  type: http
  seq: 3
}

post {
  url: {{base_url}}/api/register
  body: none
  auth: inherit
}

script:post-response {
  bru.setVar("usercode", res.body.userCode, "collection");
}

tests {
  test("should set usercode", function () {
    expect(bru.getVar("usercode")).to.exist;
    expect(bru.getVar("usercode")).to.not.be.empty;
  });
}

settings {
  encodeUrl: true
  timeout: 0
}
